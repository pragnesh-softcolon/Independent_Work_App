<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/Baby_Blue"
    app:cardCornerRadius="16dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:text="User_name"
                android:textSize="20dp"/>
        </LinearLayout>
        <TextView
            android:padding="5dp"
            android:textColor="@color/black"
            android:id="@+id/etPloatNo"
            android:tooltipText="Plot Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:hint="Event name" />


        <TextView
            android:padding="5dp"
            android:textColor="@color/black"
            android:id="@+id/etDate"
            android:tooltipText="Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:hint="Work" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_weight="1"
                android:padding="5dp"
                android:textColor="@color/black"
                android:id="@+id/etChequeNo"
                android:tooltipText="Cheque Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:hint="Members" />


            <TextView
                android:layout_weight="1"
                android:padding="5dp"
                android:textColor="@color/black"
                android:tooltipText="Amount"
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:hint="Start date-End Date" />

        </LinearLayout>



        <TextView
            android:padding="5dp"
            android:textColor="@color/black"
            android:tooltipText="Amount"
            android:id="@+id/Locatoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:hint="Locaton"
            android:layout_marginBottom="@dimen/_10sdp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>