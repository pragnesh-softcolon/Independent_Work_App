<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/Baby_Blue"
    app:cardCornerRadius="@dimen/_16sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginTop="@dimen/_10sdp">
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:text="User name"
                android:textSize="20dp"/>
        </LinearLayout>
        <TextView
            android:contentDescription="event name"
            android:padding="5dp"
            android:textColor="@color/black"
            android:id="@+id/etEventName"
            android:tooltipText="Plot Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:hint="Event name" />


        <TextView
            android:padding="5dp"
            android:textColor="@color/black"
            android:id="@+id/etWork"
            android:tooltipText="Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:hint="Work" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_weight="1"
                android:id="@+id/etMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Members"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:tooltipText="Cheque Number" />


            <TextView
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Start date &amp; End Date"
                android:gravity="end"
                android:hint="Start date to End Date"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:tooltipText="Amount" />

        </LinearLayout>



        <TextView
            android:padding="5dp"
            android:contentDescription="event location"
            android:textColor="@color/black"
            android:tooltipText="Amount"
            android:id="@+id/Locatoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:hint="Locaton"
            android:layout_marginBottom="@dimen/_10sdp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>